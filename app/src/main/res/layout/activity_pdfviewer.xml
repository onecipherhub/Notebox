<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- TODO: we can add the constraint layout inside the linear layout because when the RV is zoomed in or zoomed out looses it's constraint in any layout -->
    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pdfName_TV">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/thisIsIt"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/pdfViewer_RV"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/pageCount_TV"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:background="@color/colorWhite_FFFFFF"
        android:fontFamily="@font/segoe_ui"
        android:gravity="center"
        android:text="0 / 0"
        android:textColor="@color/colorGray_777777"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/pdfName_TV"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:background="@color/colorWhite_FFFFFF"
        android:ellipsize="end"
        android:fontFamily="@font/josefin_sans_regular"
        android:gravity="center_vertical"
        android:paddingStart="20dp"
        android:paddingEnd="10dp"
        android:singleLine="true"
        android:text="U1_CN2_CSE_BE_NMIT"
        android:textColor="@color/colorAppTheme"
        app:layout_constraintEnd_toStartOf="@+id/pageCount_TV"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/zoomOut_IB"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:visibility="gone"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/bg_trans_radius_20"
        android:src="@drawable/ic_zoom_out_black_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
