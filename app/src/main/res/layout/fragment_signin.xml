<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Signin">


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/custom_shadow">

        <Button
            android:id="@+id/changeToSignup_B"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginEnd="16dp"
            android:background="@android:color/transparent"
            android:fontFamily="@font/comfortaa_bold"
            android:stateListAnimator="@null"
            android:text="Signup >"
            android:textAllCaps="false"
            android:textColor="@color/colorGray_AAAAAA"
            android:textSize="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageButton" />

        <!--<ImageView-->
            <!--android:id="@+id/signupArrow_IV"-->
            <!--android:layout_width="20dp"-->
            <!--android:layout_height="20dp"-->
            <!--android:layout_marginEnd="3dp"-->
            <!--android:alpha="0.5"-->
            <!--android:clickable="false"-->
            <!--android:rotation="180"-->
            <!--app:layout_constraintBottom_toBottomOf="@+id/changeToSignup_B"-->
            <!--app:layout_constraintEnd_toEndOf="@+id/changeToSignup_B"-->
            <!--app:layout_constraintTop_toTopOf="@+id/changeToSignup_B"-->
            <!--app:srcCompat="@drawable/icon_down_arrow" />-->

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="8dp"
            android:background="@android:color/transparent"
            android:src="@drawable/icon_sharp_down_arrow"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/fullName_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/consolas_regular"
            android:visibility="gone"
            android:text="Full name:"
            android:textColor="@color/colorGray_999999"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/changeToSignup_B" />

        <EditText
            android:id="@+id/fullName_ET"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/bg_br_radius_gray"
            android:ems="10"
            android:fontFamily="@font/comfortaa_bold"
            android:hint="full name"
            android:inputType="textEmailAddress"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textColor="@color/colorAppTheme"
            android:textColorHint="@color/colorGray_AAAAAA"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@+id/changeToSignup_B"
            app:layout_constraintStart_toStartOf="@+id/fullName_TV"
            app:layout_constraintTop_toBottomOf="@+id/fullName_TV" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/consolas_regular"
            android:text="E-mail:"
            android:textColor="@color/colorGray_999999"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fullName_ET" />

        <EditText
            android:id="@+id/email_ET"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/bg_br_radius_gray"
            android:ems="10"
            android:fontFamily="@font/comfortaa_bold"
            android:hint="@string/e_mail"
            android:inputType="textEmailAddress"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textColor="@color/colorAppTheme"
            android:textColorHint="@color/colorGray_AAAAAA"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@+id/changeToSignup_B"
            app:layout_constraintStart_toStartOf="@+id/textView5"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/consolas_regular"
            android:text="Password:"
            android:textColor="@color/colorGray_999999"
            app:layout_constraintStart_toStartOf="@+id/email_ET"
            app:layout_constraintTop_toBottomOf="@+id/email_ET" />

        <EditText
            android:id="@+id/password_ET"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/bg_br_radius_gray"
            android:fontFamily="@font/comfortaa_bold"
            android:gravity="center_vertical"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textColor="@color/colorAppTheme"
            android:textColorHint="@color/colorGray_AAAAAA"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@+id/email_ET"
            app:layout_constraintStart_toStartOf="@+id/textView6"
            app:layout_constraintTop_toBottomOf="@+id/textView6" />

        <Button
            android:id="@+id/googleSignin_B"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_white_pill_20"
            android:drawablePadding="5dp"
            android:elevation="3dp"
            android:fontFamily="@font/comfortaa_bold"
            android:paddingStart="15dp"
            android:paddingEnd="7dp"
            android:text="@string/google"
            android:textAllCaps="false"
            android:textColor="@color/colorGray_999999"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/password_ET"
            app:layout_constraintTop_toBottomOf="@+id/password_ET" />

        <Button
            android:id="@+id/nextTemplate_B"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/bg_apptheme_pill_20"
            android:fontFamily="@font/consolas_regular"
            android:text="@string/login"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite_FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/password_ET"
            app:layout_constraintTop_toBottomOf="@+id/password_ET" />
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>