<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite_FFFFFF"
    tools:context=".SplashScreen">

    <View
        android:id="@+id/whiteBg_V"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="false"
        android:background="@color/colorWhite_FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        android:elevation="11dp"
        android:stateListAnimator="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/blueBg_V"
        android:layout_width="0dp"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent=".5"
        android:layout_height="match_parent"
        android:background="@color/colorAppTheme"
        app:layout_constraintBottom_toBottomOf="parent"
        android:elevation="11dp"
        android:stateListAnimator="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/finalLogo_IV"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:elevation="11dp"
        android:stateListAnimator="@null"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon_final_logo_without_border" />

    <TextView
        android:id="@+id/by_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:fontFamily="@font/segoe_ui"
        android:text="@string/by"
        android:elevation="11dp"
        android:stateListAnimator="@null"
        android:textColor="@color/colorWhite_FFFFFF"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/cipherHub_TV"
        app:layout_constraintEnd_toStartOf="@+id/cipherHub_TV"
        app:layout_constraintTop_toTopOf="@+id/cipherHub_TV" />

    <TextView
        android:id="@+id/cipherHub_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:elevation="11dp"
        android:stateListAnimator="@null"
        android:fontFamily="@font/segoe_ui_bold"
        android:text="@string/cipher_hub"
        android:textColor="@color/colorWhite_FFFFFF"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</android.support.constraint.ConstraintLayout>